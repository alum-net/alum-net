<configuration>
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/alum-net.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>logs/alum-net.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>10MB</maxFileSize>
            <maxHistory>10</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} - %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
    <logger name="org.mongodb.driver.cluster" level="OFF"/>
    <logger name="org.mongodb.driver.connection" level="OFF"/>
    <logger name="org.mongodb.driver.protocol" level="OFF"/>
    <logger name="org.mongodb" level="ERROR"/>

    <root level="INFO">
        <appender-ref ref="FILE" />
    </root>
</configuration>